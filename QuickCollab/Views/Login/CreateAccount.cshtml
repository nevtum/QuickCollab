@model QuickCollab.Accounts.Account

@{
    ViewBag.Title = "CreateAccount";
}

<h2>CreateAccount</h2>

<div id="create">
    @using (Html.BeginForm("CreateAccount", "Login"))
    {
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Enter a username" })
        <br/>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Enter a password" })
        <br/>
        <input type="submit" value="Create Account" />
    }
    @Html.ActionLink("Cancel", "SignIn")
</div>